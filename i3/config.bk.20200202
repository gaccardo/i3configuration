bindsym $mod+space exec rofi -show run -config $HOME/.config/i3/rofi.conf
bindsym $mod+Shift+space exec rofi -ssh-command "kitty -e /home/guido/.ssh/client {host}" -show ssh -config $HOME/.config/i3/rofi.conf 
